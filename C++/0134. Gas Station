class Solution {
public:
    int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
        int box=0,total=0,totalcost=0,res=0;
        for(int i=0;i<gas.size();++i){
            total+=gas[i];
            totalcost+=cost[i];
            box+=(gas[i]-cost[i]);;
            if(box<0 ) {
                box=0;
                res=i+1;
            }
        }
        return total>=totalcost?res:(-1);
    }
};

// better
class Solution1 {
public:
    int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
        int total=0,sum=0,start=0;
        for(int i=0;i<gas.size();++i){
            total+=gas[i]-cost[i];
            sum+=gas[i]-cost[i];
            if(sum<0){
                sum=0;
                start=i+1;
            }
        }
        return total<0?-1:start;
    }
};
